ButtonZShop < UIButton
  font: lucida-11px-rounded
  size: 48 48
  opacity: 0.6
  image-source: /images/zshop/itemBackground
  border-width: 1
  border-color: black

  $first:
    anchors.top: parent.top
    anchors.left: parent.left
  $!first:
    anchors.top: prev.top
    anchors.left: prev.right
    margin-left: 6

  $hover !disabled:
    opacity: 1.0
    border-color: #ffd700

  $pressed:
    opacity: 0.8

  $disabled:
    opacity: 0.5
  UIWidget
    id: image
    size: 48 48
    image-source: /images/zshop/things/30 VIP Days
    anchors.fill: parent
    phantom: true
  Item
    id: dd
    size: 16 16
    phantom: true
    virtual: true
    image-color: alpha
    anchors.right: parent.right
    anchors.bottom: parent.bottom
  UILabel
    id: value
    font: lucida-11px-rounded
    color: #84C1FF
    height: 16
    !text: tr('10')
    width: 50
    text-align: right
    text-wrap: true
    phantom: true
    anchors.right: dd.left
    anchors.bottom: parent.bottom

