Button < UIButton
  font: verdana-11px-antialised
  color: #93d8a6
  size: 106 20
  text-offset: 0 0
  image-source: /images/ui/button
  image-color: white
  image-clip: 0 0 20 20
  image-border: 4
  padding: 5 10 5 10

  $hover !disabled:
    image-clip: 0 20 20 20

  $pressed:
    image-clip: 0 40 20 20
    text-offset: 1 1

  $disabled:
    color: #808080

TabChatButton < UIButton
  size: 24 24
  image-source: /images/game/chat/tabBarButtons
  image-clip: 0 0 24 24
  icon-color: white
  opacity: 0.6

  $hover:
    image-clip: 0 24 24 24
    opacity: 1.0

  $disabled:
    icon-color: #888888
    opacity: 0.5

BigButton < UIButton
